@model IEnumerable<GuestsView>

<div class="container">
    <h3> Cписок гостей </h3>
    <p>
        <h5>@Html.ActionLink("Добавить I способом", "AddNew")</h5>
        <h5>@Html.ActionLink("Добавить II способом", "Edit")</h5>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>№</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th>Описание</th>
                <th>Ред-ние</th>
                <th>Удаление</th>
                <th>Очистка</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {<tr>
                <td>@item.Id</td>
                <td>@item.SurName</td>
                <td>@item.FirstName</td>
                <td>@item.Partronymic</td>
                <td>@item.Age</td>
                <td>@Html.ActionLink("Детали", "Details", new { id = item.Id })</td>
                <td>@Html.ActionLink("Изменить", "Edit", new { id = item.Id })</td>
                <td>@Html.ActionLink("Удалить", "Delete", new { id = item.Id })</td>
                <td>@Html.ActionLink(">>>", "DeleteConfirmed", new { id = item.Id })</td>
                @*<form asp-action="DeleteConfirmed" asp-route-id="item.Id">
                    <input type="submit" value="Del" class="btn btn-danger" /> |
                </form>*@
            </tr>
             }
        </tbody>
    </table>
    <p>
        <a asp-controller="Home" asp-action="Index">Назад</a>
    </p>
</div>
    

